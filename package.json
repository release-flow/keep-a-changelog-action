{
  "name": "keep-a-changelog-actions",
  "version": "1.1.0",
  "description": "A set of GitHub Actions to work with a changelog that adheres to keep-a-changelog and Semantic Versioning conventions.",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "clean": "shx rm -rf lib",
    "test": "cross-env NODE_OPTIONS=--experimental-vm-modules npx jest",
    "build-and-test": "tsc --incremental && npm test",
    "rebuild-and-test": "npm run clean && npm run build && npm test",
    "build": "tsc",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "npx oxlint src/**/*.ts",
    "package": "ncc build lib/index.js --source-map --license licenses.txt -o dist && ncc build lib/cli.js --source-map --license licenses.txt -o dist/cli",
    "all": "npm run build && npm run format-check && npm run lint && npm test && npm run package",
    "prepare": "husky"
  },
  "author": "Release Flow <info@releaseflow.io>",
  "license": "MIT",
  "devDependencies": {
    "@jest/globals": "^30.2.0",
    "@types/jest": "^30.0.0",
    "@types/mdast": "^4.0.4",
    "@types/node": "^24.9.1",
    "@types/semver": "^7.3.9",
    "@types/unist": "^3.0.3",
    "@types/uuid": "^10.0.0",
    "@vercel/ncc": "^0.38.1",
    "chalk": "^5.1.2",
    "cross-env": "^10.1.0",
    "globby": "^15.0.0",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "jest-diff": "^30.2.0",
    "lint-staged": "^16.2.6",
    "oxlint": "^1.24.0",
    "prettier": "^3.3.3",
    "shx": "^0.4.0",
    "typescript": "^5.5.4",
    "uuid": "^13.0.0"
  },
  "dependencies": {
    "@actions/core": "^1.6.0",
    "date-fns": "^4.1.0",
    "remark": "^15.0.1",
    "remark-stringify": "^11.0.0",
    "semver": "^7.3.5",
    "to-vfile": "^8.0.0",
    "unified": "^11.0.5",
    "unist-util-find-all-after": "^5.0.0",
    "unist-util-find-all-between": "^2.1.0",
    "unist-util-is": "^6.0.1",
    "unist-util-map": "^4.0.0",
    "unist-util-remove": "^4.0.0",
    "unist-util-visit": "^5.0.0",
    "vfile": "^6.0.3",
    "vfile-message": "^4.0.3",
    "vfile-reporter": "^8.1.1",
    "yargs": "^18.0.0"
  }
}
